<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_for_line_text_view"
    android:orientation="horizontal">



        <TextView
            android:id="@+id/temperature_text_view_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_temp_text_view"
            tools:text="18 C"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_time_text_view_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_for_line_text_view"
                tools:text="23.07.2008 12:40"/>

            <TextView
                android:id="@+id/weather_main_text_view_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="cloud"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_ine_text_view"
                android:layout_marginTop="@dimen/margin_top_for_line_text_view"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/small_image_weather_today"
            android:layout_width="@dimen/width_height_for_image_view"
            android:layout_height="@dimen/width_height_for_image_view"
            android:scaleType="centerCrop"
            tools:src="@drawable/cloudy"/>

</LinearLayout>